{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/local/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-O3",
				"-g",
				// "${workspaceFolder}/weather/*.c",
				"${workspaceFolder}/homerwork_2/main.cpp",
				"-I",
				"${workspaceFolder}/",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/local/bin/g++"
		}
	]
}